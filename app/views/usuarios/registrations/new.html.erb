<div class="alert alert-info" role="alert">Cadastre-se</div>

<%= form_for(resource, as: resource_name, 
                      url: registration_path(resource_name),
                     html: {class: "form-horizontal", role: "form"}) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
    <label for="usuario" class="col-sm-2 control-label">Nome para Contato</label>
    <div class="col-sm-10">
      <%= f.text_field :usuario, {class: 'form-control', placeholder: "Nome para Contato"} %>
    </div>
  </div>

  <div class="form-group">
    <label for="usuario" class="col-sm-2 control-label">Nome da Empresa</label>
    <div class="col-sm-10">
      <%= f.text_field :empresa, {class: 'form-control', placeholder: "Nome da Empresa"} %>
    </div>
  </div>

  <div class="form-group">
    <label for="usuario" class="col-sm-2 control-label">CNPJ</label>
    <div class="col-sm-10">
      <%= f.text_field :cnpj, {class: 'form-control', placeholder: "CNPJ"} %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="usuario" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <%= f.text_field :email, {class: 'form-control', placeholder: "Email"} %>
    </div>
  </div>

  <div class="form-group">
    <label for="usuario" class="col-sm-2 control-label">Telefone</label>
    <div class="col-sm-10">
      <%= f.text_field :telefone, {class: 'form-control', placeholder: "Telefone"} %>
    </div>
  </div>

  <div class="form-group">
    <label for="usuario" class="col-sm-2 control-label">Endereço</label>
    <div class="col-sm-10">
      <%= f.text_field :endereco, {class: 'form-control', placeholder: "Endereço"} %>
    </div>
  </div>

  <div class="form-group">
    <label for="usuario" class="col-sm-2 control-label">Tipo de Negócio</label>
    <div class="col-sm-10">
      <%= f.text_field :tipo_de_negocio, {class: 'form-control', placeholder: "Tipo de Negócio"} %>
    </div>
  </div>

  <div class="form-group">
    <label for="usuario" class="col-sm-2 control-label">Senha</label>
    <div class="col-sm-10">
    <%= f.password_field :password, {class: 'form-control', placeholder: "Senha", autocomplete: "off"} %>
    <% if @validatable %><i>(No mínimo <%= @minimum_password_length %> caracteres)</i><% end %><br />
    </div>
  </div>

  <div class="form-group">
    <label for="usuario" class="col-sm-2 control-label">Confirmação de Senha</label>
    <div class="col-sm-10">
    <%= f.password_field :password_confirmation, {class: 'form-control', placeholder: "Confirme sua Senha", autocomplete: "off"} %>
    </div>
  </div>

  <p style="width: 100%; text-align: center">
    <%= f.submit "Concluir", {class: 'btn btn-default'} %>
  </p>
<% end %>
