<div class="alert alert-info" role="alert">Tela de Doações</div>
<%= render partial: 'layouts/flash_messages' %>

<%= form_for :doacao, 
  url: doacao_path,
  html: {class: "form-horizontal", role: "form"} do |f| %>

  <div class="form-group">
    <label for="instituicao" class="col-sm-2 control-label">Instituição</label>
    <div class="col-sm-10">
      <%= f.select( :instituicao_id, 
        Instituicao.all.collect {|i| [ i.nome, i.id ] },
         {prompt: 'Escolha uma Instituição'},
         class: "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <label for="descricao" class="col-sm-2 control-label">Descrição da Doação</label>
    <div class="col-sm-10">
      <%= f.text_area :descricao, {class: 'form-control', 
        placeholder: "Descreva aqui os alimentos a serem doados e suas quantidades."} %>
    </div>
  </div>

  <div style="width: 100%; text-align: center">
    <%= f.submit "Doar",  {class: "btn btn-success"} %>
  </div>

<% end %>